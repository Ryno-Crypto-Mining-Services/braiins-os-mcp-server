# ============================================================
# braiins-os-mcp-server Environment Configuration
# ============================================================
# Copy this file to .env and configure for your environment
# NEVER commit .env files with real credentials to git
# ============================================================

# ==================== Server Settings ====================
NODE_ENV=development
PORT=3000
TRANSPORT=stdio
LOG_LEVEL=info

# ==================== Redis Settings ====================
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# ==================== gRPC Settings ====================
GRPC_DEFAULT_HOST=localhost
GRPC_DEFAULT_PORT=50051
GRPC_USE_TLS=false

# ==================== Authentication ====================
# JWT secret for signing tokens (generate with: openssl rand -base64 32)
# JWT_SECRET=your-jwt-secret-here

# Token expiry settings
JWT_EXPIRY=1h

# OAuth 2.0 credentials (for managed deployments)
# OAUTH_CLIENT_ID=your-client-id
# OAUTH_CLIENT_SECRET=your-client-secret

# ==================== Rate Limiting ====================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=60000

# ==================== External Services ====================
# Vault address for secrets management (production)
# VAULT_ADDR=https://vault.your-domain.com
# VAULT_TOKEN=hvs.xxxxx

# ==================== Monitoring ====================
# Prometheus metrics endpoint
# METRICS_ENABLED=true
# METRICS_PORT=9090

# ============================================================
# Development-specific settings
# ============================================================
# Enable detailed error messages in responses
# DEBUG_ERRORS=true

# Enable request/response logging
# DEBUG_REQUESTS=true
